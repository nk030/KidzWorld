@model KidzWorld.Models.Toys

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Toys</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToyName" class="control-label"></label>
                <input asp-for="ToyName" class="form-control" />
                <span asp-validation-for="ToyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToyDescription" class="control-label"></label>
                <textarea asp-for="ToyDescription" class="form-control" ></textarea>
                <span asp-validation-for="ToyDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="File.FormFile" class="control-label"></label>
                <input asp-for="File.FormFile" type="file" class="form-control">
                <span asp-validation-for="File.FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeID" class="control-label"></label>
                <select asp-for="AgeID" class="form-control" asp-items="ViewBag.AgeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Sellers" class="control-label"></label>
                <select asp-for="Sellers.SellerID" class="form-control" asp-items="ViewBag.SellerID"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
